# XII. COLORTABLE SETTINGS

# A. DATE COLOR SETTING
DATE_COLOR=0XFFFFFF #white

# B. URBAN (NON-LANDUSE) COLORTABLE SETTINGS
SEED_COLOR=0XFF0000 #red (existing urban)
WATER_COLOR=0X0066CC #blue

# C. PROBABILITY COLORTABLE FOR URBAN GROWTH
#                  low,  upper,   hex,  (Optional Name)
PROBABILITY_COLOR=   0,    20,         , #transparent
PROBABILITY_COLOR=  20,    40, 0X90EE90, #light green
PROBABILITY_COLOR=  40,    60, 0X32CD32, #lime green
PROBABILITY_COLOR=  60,    80, 0X228B22, #forest green
PROBABILITY_COLOR=  80,    90, 0XFFA500, #orange
PROBABILITY_COLOR=  90,   100, 0XFF0000, #red

# D. LAND COVER COLORTABLE (基於台灣土地利用分類)
#              pix, name,     flag,   hex/rgb, #comment
LANDUSE_CLASS=  0,  Unclass , UNC   , 0X000000 #black
LANDUSE_CLASS=  1,  Urban   , URB   , 0XFF0000 #red
LANDUSE_CLASS=  2,  Agric   ,       , 0XFFFF00 #yellow
LANDUSE_CLASS=  3,  Range   ,       , 0XC0C0C0 #silver
LANDUSE_CLASS=  4,  Forest  ,       , 0X228B22 #forest green
LANDUSE_CLASS=  5,  Water   , EXC   , 0X0066CC #blue
LANDUSE_CLASS=  6,  Wetland ,       , 0X4169E1 #royal blue
LANDUSE_CLASS=  7,  Barren  ,       , 0XD2B48C #tan

# E. GROWTH TYPE IMAGE OUTPUT CONTROL
VIEW_GROWTH_TYPES(YES/NO)=NO
GROWTH_TYPE_PRINT_WINDOW=0,0,0,0,2020,2040
PHASE0G_GROWTH_COLOR=0xff0000 # seed urban area
PHASE1G_GROWTH_COLOR=0X00ff00 # diffusion growth
PHASE2G_GROWTH_COLOR=0X0000ff # NOT USED
PHASE3G_GROWTH_COLOR=0Xffff00 # breed growth
PHASE4G_GROWTH_COLOR=0Xffffff # spread growth
PHASE5G_GROWTH_COLOR=0X00ffff # road influenced growth

# F. DELTATRON AGING SECTION
VIEW_DELTATRON_AGING(YES/NO)=NO
DELTATRON_PRINT_WINDOW=0,0,0,0,1950,2040
DELTATRON_COLOR=0x000000 # index 0 No or dead deltatron
DELTATRON_COLOR=0X00FF00 # index 1 age = 1 year
DELTATRON_COLOR=0X00D200 # index 2 age = 2 year
DELTATRON_COLOR=0X00AA00 # index 3 age = 3 year
DELTATRON_COLOR=0X008200 # index 4 age = 4 year
DELTATRON_COLOR=0X005A00 # index 5 age = 5 year

# XIII. SELF-MODIFICATION PARAMETERS
# 針對台灣快速都市化調整參數
ROAD_GRAV_SENSITIVITY=0.01
SLOPE_SENSITIVITY=0.1
CRITICAL_LOW=0.95    # 較低門檻，適應快速成長
CRITICAL_HIGH=1.5    # 較高門檻，允許更大波動
CRITICAL_SLOPE=25.0  # 台灣地形陡峭，提高坡度門檻
BOOM=1.05           # 成長期加速因子
BUST=0.85           # 衰退期減緩因子