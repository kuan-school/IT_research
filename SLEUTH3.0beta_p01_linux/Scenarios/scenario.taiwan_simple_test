# SLEUTH Simple Test for Taiwan
# 使用現有土地利用資料的簡化測試

# I. PATH NAME VARIABLES
INPUT_DIR=Input/taiwan_full/
OUTPUT_DIR=Output/taiwan_simple_test/
WHIRLGIF_BINARY=Whirlgif/whirlgif

# II. RUNNING STATUS (ECHO)
ECHO(YES/NO)=yes

# III. Output Files
WRITE_COEFF_FILE(YES/NO)=yes
WRITE_AVG_FILE(YES/NO)=yes
WRITE_STD_DEV_FILE(YES/NO)=yes
WRITE_MEMORY_MAP(YES/NO)=yes
LOGGING(YES/NO)=yes

# IV. Log File Preferences
LOG_PROCESSING_STATUS(0:off/1:low verbosity/2:high verbosity)=2
LOG_TIMINGS(0:off/1:low verbosity/2:high verbosity)=1

# V. WORKING GRIDS
NUM_WORKING_GRIDS=4

# VI. RANDOM NUMBER SEED
RANDOM_SEED=1

# VII. MONTE CARLO ITERATIONS (最少測試)
MONTE_CARLO_ITERATIONS=1

# VIII. COEFFICIENTS (簡化測試係數)
CALIBRATION_DIFFUSION_START=50
CALIBRATION_DIFFUSION_STEP=1
CALIBRATION_DIFFUSION_STOP=50

CALIBRATION_BREED_START=50
CALIBRATION_BREED_STEP=1
CALIBRATION_BREED_STOP=50

CALIBRATION_SPREAD_START=50
CALIBRATION_SPREAD_STEP=1
CALIBRATION_SPREAD_STOP=50

CALIBRATION_SLOPE_START=50
CALIBRATION_SLOPE_STEP=1
CALIBRATION_SLOPE_STOP=50

CALIBRATION_ROAD_START=50
CALIBRATION_ROAD_STEP=1
CALIBRATION_ROAD_STOP=50

# IX. PREDICTION DATE RANGE
PREDICTION_START_DATE=2020
PREDICTION_STOP_DATE=2025

# X. INPUT IMAGES - 僅使用土地利用資料進行測試
# 將土地利用資料當作城市資料使用

# 將土地利用檔案複製為城市檔案進行測試
URBAN_DATA=taiwan.urban.2000.gif
URBAN_DATA=taiwan.urban.2010.gif

# 使用同樣的檔案作為道路資料
ROAD_DATA=taiwan.roads.2000.gif
ROAD_DATA=taiwan.roads.2010.gif

# 土地利用資料
LANDUSE_DATA=taiwan.landuse.2000.gif
LANDUSE_DATA=taiwan.landuse.2010.gif

# 使用實際的 DEM 坡度資料和簡單的排除區域
EXCLUDED_DATA=taiwan.excluded.gif
SLOPE_DATA=taiwan.slope.gif

# XI. COLORTABLE SETTINGS
DATE_COLOR=0XFFFFFF
SEED_COLOR=0X0000FF
WATER_COLOR=0X0066CC

# 簡化的機率顏色表
PROBABILITY_COLOR=0, 50, 0X90EE90
PROBABILITY_COLOR=50, 100, 0XFF0000

# 簡化的土地利用分類
LANDUSE_CLASS=0, Unclass, UNC, 0X000000
LANDUSE_CLASS=1, Urban,   URB, 0XFF0000
LANDUSE_CLASS=2, Other,       , 0X228B22

# XII. SELF-MODIFICATION PARAMETERS
ROAD_GRAV_SENSITIVITY=0.01
SLOPE_SENSITIVITY=0.1
CRITICAL_LOW=0.97
CRITICAL_HIGH=1.3
CRITICAL_SLOPE=21.0
BOOM=1.01
BUST=0.9