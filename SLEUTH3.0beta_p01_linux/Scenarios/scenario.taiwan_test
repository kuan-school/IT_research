# XI. OUTPUT IMAGES
WRITE_COLOR_KEY_IMAGES(YES/NO)=yes
ECHO_IMAGE_FILES(YES/NO)=yes
ANIMATION(YES/NO)=yes

# XII. COLORTABLE SETTINGS

# A. DATE COLOR SETTING
DATE_COLOR=0XFFFFFF #white

# B. URBAN (NON-LANDUSE) COLORTABLE SETTINGS
