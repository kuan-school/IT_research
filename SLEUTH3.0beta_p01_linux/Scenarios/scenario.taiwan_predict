CALIBRATION_SPREAD_STEP=1
CALIBRATION_SPREAD_STOP=60

CALIBRATION_SLOPE_START=85
CALIBRATION_SLOPE_STEP=1
CALIBRATION_SLOPE_STOP=85

CALIBRATION_ROAD_START=50
CALIBRATION_ROAD_STEP=1
CALIBRATION_ROAD_STOP=50

# 預測用最佳係數 (需要根據校正結果調整)
PREDICTION_DIFFUSION_BEST_FIT=30
PREDICTION_BREED_BEST_FIT=50
PREDICTION_SPREAD_BEST_FIT=60
PREDICTION_SLOPE_BEST_FIT=85
PREDICTION_ROAD_BEST_FIT=50

# IX. PREDICTION DATE RANGE
# 從 2015 年預測到 2050 年
PREDICTION_START_DATE=2015
PREDICTION_STOP_DATE=2050

# X. INPUT IMAGES
# 使用歷史資料進行預測

# Urban data GIFs
URBAN_DATA=taiwan.urban.1956.gif
